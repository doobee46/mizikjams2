 @import url(http://fonts.googleapis.com/css?family=Lato:400,700,300,900);
 @import url(https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,700italic,700,300italic,300);
 @import url(http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700);
 @import url(https://fonts.googleapis.com/css?family=Oswald:400,300);
  
 @media (max-width: 767px) {
  .header {
    margin-top: -5px;
  }
  .brand {
    display: block;
    margin-right: auto;
    margin-left: auto;
  }
  .videoplay {
    width: 100%;
    height: 250px;
  }
  .search-mobileicon {
    position: relative;
    left: -11px;
    top: -17px;
    float: right;
    opacity: 0.53;
  }
  .search-mobileicon:hover {
    opacity: 1;
  }
  .music_mobile {
    margin-bottom: 15px;
    padding-top: 57px;
  }
  .music_list {
    height: 295px;
    background-image: -webkit-linear-gradient(168deg, transparent, #000);
    background-image: linear-gradient(282deg, transparent, #000);
  }
  .mobilelistimage {
    padding-bottom: 0px;
    opacity: 0.48;
  }
  .mobile_play {
    position: relative;
    top: -156px;
    display: block;
    width: 49px;
    margin-right: auto;
    margin-left: auto;
  }
  .mobileimageplay {
    position: relative;
    top: -53px;
    bottom: auto;
    display: block;
    margin-right: auto;
    margin-left: auto;
    opacity: 0.44;
  }
  .mobileimageplay:hover {
    opacity: 1;
  }
  .mobilemusicinfo {
    position: relative;
    left: 0px;
    top: -182px;
    bottom: 0px;
    opacity: 0.75;
    font-family: Oswald, sans-serif;
    color: #fff;
    font-size: 25px;
    text-align: center;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
  .mobiledescription {
    position: relative;
    top: -100px;
    opacity: 0.75;
    font-family: Lato, sans-serif;
    color: #fff;
    font-size: 12px;
    font-weight: 300;
    text-align: center;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
  .hearticonwrapper {
    position: relative;
    left: 0px;
    top: -105px;
    bottom: 0px;
    padding-left: 20px;
    font-family: 'Open Sans', sans-serif;
  }
  .plusign {
    margin-left: 37px;
  }
  .viewcounts {
    position: relative;
    left: 376px;
    top: -122px;
    width: 191px;
    padding-right: 14px;
    float: none;
    opacity: 0.68;
    font-family: 'Open Sans', sans-serif;
    color: #fff;
    font-size: 11px;
    font-weight: 300;
    text-align: right;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
  .brandname {
    display: block;
    margin-right: auto;
    margin-left: auto;
  }
}

@media (max-width: 479px) and (max-width: 766px) {
  .header {
    position: fixed;
    height: 52px;
    margin-top: -4px;
    padding-bottom: 0px;
  }
  .brand {
    position: static;
    display: block;
    margin-top: 20px;
  }
  .videoplay {
    width: 100%;
    height: 185px;
    margin-top: 58px;
  }
  .search-mobileicon {
    position: relative;
    left: -9px;
    top: -18px;
    float: right;
    opacity: 0.54;
  }
  .search-mobileicon:hover {
    opacity: 0.88;
  }
  .music_list {
    height: 166px;
  }
  .mobile_play {
    top: -125px;
  }
  .mobileimageplay {
    position: static;
  }
  .mobilemusicinfo {
    top: -112px;
    font-size: 19px;
  }
  .hearticonwrapper {
    top: -84px;
  }
  .phonelist {
    position: relative;
    left: 0px;
    top: 55px;
  }
  .brandname {
    display: block;
    margin-right: auto;
    margin-left: auto;
  }
  .showvideomain {
    display: inline-block;
    font-size: 13px;
  }
  .showvideosub {
    display: inline-block;
    font-size: 12px;
    letter-spacing: 1px;
  }
  .leftcol {
    display: block;
  }
  .rightcol {
    display: block;
  }
}

